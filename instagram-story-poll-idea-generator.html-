                    for (let i = 0; i < Math.min(2, questions.length); i++) {
                        if (selectedPolls[i]) {
                            selectedPolls[i].question = questions[i];
                        }
                    }
                }
                
                // Adjust options based on audience if selected
                if (audience && audienceOptions[audience]) {
                    selectedPolls.forEach(poll => {
                        if (Math.random() > 0.5) { // 50% chance to customize for audience
                            poll.options = audienceOptions[audience];
                        }
                    });
                }
                
                // Display poll ideas
                if (selectedPolls.length > 0) {
                    let outputHTML = '';
                    selectedPolls.forEach(poll => {
                        outputHTML += `
                            <div class="poll-idea">
                                <div class="poll-question">${poll.question}</div>
                                <div class="poll-options">
                                    ${poll.options.map(opt => `<span class="poll-option">${opt}</span>`).join('')}
                                </div>
                            </div>
                        `;
                    });
                    pollOutput.innerHTML = outputHTML;
                } else {
                    pollOutput.innerHTML = '<p>No poll ideas could be generated. Please try with different inputs.</p>';
                }
            }
            
            // Shuffle array function
            function shuffleArray(array) {
                for (let i = array.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [array[i], array[j]] = [array[j], array[i]];
                }
                return array;
            }
            
            // Event listeners
            generateBtn.addEventListener('click', generatePollIdeas);
            newIdeasBtn.addEventListener('click', generatePollIdeas);
            
            resetBtn.addEventListener('click', function() {
                document.getElementById('niche').value = '';
                document.getElementById('goal').value = '';
                document.getElementById('audience').value = '';
                pollOutput.innerHTML = '<p>Your generated poll ideas will appear here after you click the Generate button.</p>';
            });
            
            // FAQ toggle functionality
            const faqQuestions = document.querySelectorAll('.faq-question');
            faqQuestions.forEach(question => {
                const answer = question.nextElementSibling;
                answer.style.display = 'none';
                
                question.addEventListener('click', () => {
                    if (answer.style.display === 'none') {
                        answer.style.display = 'block';
                    } else {
                        answer.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>
</html>
