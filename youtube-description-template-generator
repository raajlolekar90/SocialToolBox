    <script>
        // Tool functionality
        document.addEventListener('DOMContentLoaded', function() {
            const generateBtn = document.getElementById('generate-description');
            const copyBtn = document.getElementById('copy-description');
            const resetBtn = document.getElementById('reset-description');
            const descriptionOutput = document.getElementById('description-output');
            
            // Description templates by style
            const descriptionTemplates = {
                professional: [
                    "In this video, we explore {topic}.\n\n",
                    "KEY POINTS COVERED:\nâ€¢ Point one related to {title}\nâ€¢ Point two related to {title}\nâ€¢ Point three related to {title}\n\n",
                    "RESOURCES MENTIONED:\n{links}\n\n",
                    "Subscribe to our channel for more content like this: {channelUrl}\n\n",
                    "CONNECT WITH US:\n{socialHandles}\n\n",
                    "TIMESTAMPS:\n0:00 - Introduction\n\n",
                    "For business inquiries, please contact: {email}\n\n",
                    "#{keywords}"
                ],
                casual: [
                    "Hey everyone! In this video, we're talking all about {topic}!\n\n",
                    "What we cover in this video:\nâœ¨ Aspect one of {title}\nâœ¨ Aspect two of {title}\nâœ¨ Aspect three of {title}\n\n",
                    "Check out these links mentioned in the video:\n{links}\n\n",
                    "If you enjoyed this video, please give it a thumbs up and subscribe for more! ðŸ””\n\n",
                    "Let's connect elsewhere:\n{socialHandles}\n\n",
                    "Video chapters:\n0:00 - Getting started\n\n",
                    "Thanks for watching! Leave a comment below with your thoughts or questions ðŸ’¬\n\n",
                    "#{keywords}"
                ],
                enthusiastic: [
                    "WOW! You won't BELIEVE what we discovered about {topic}!\n\n",
                    "IN THIS VIDEO:\nðŸŽ‰ Amazing fact one about {title}\nðŸŽ‰ Incredible fact two about {title}\nðŸŽ‰ Mind-blowing fact three about {title}\n\n",
                    "LINKS YOU NEED TO SEE:\n{links}\n\n",
                    "SMASH that like button and subscribe for more awesome content! ðŸš€\n\n",
                    "JOIN OUR COMMUNITY:\n{socialHandles}\n\n",
                    "JUMP TO SPECIFIC SECTIONS:\n0:00 - Let's go!\n\n",
                    "What was your favorite part? Let me know in the comments! ðŸ‘‡\n\n",
                    "#{keywords}"
                ],
                minimal: [
                    "{title}\n\n",
                    "This video discusses {topic}.\n\n",
                    "Relevant links:\n{links}\n\n",
                    "Subscribe: {channelUrl}\n\n",
                    "Connect: {socialHandles}\n\n",
                    "#{keywords}"
                ]
            };
            
            // Generate description based on input
            generateBtn.addEventListener('click', function() {
                const videoTitle = document.getElementById('video-title').value.trim();
                const channelName = document.getElementById('channel-name').value.trim() || "Your Channel";
                const videoTopic = document.getElementById('video-topic').value.trim();
                const videoKeywords = document.getElementById('video-keywords').value.trim();
                const videoLinks = document.getElementById('video-links').value.trim();
                const socialHandles = document.getElementById('social-handles').value.trim();
                const descriptionStyle = document.getElementById('description-style').value;
                
                if (!videoTitle || !videoTopic) {
                    alert('Please enter at least a video title and topic description');
                    return;
                }
                
                // Process keywords
                const keywordsArray = videoKeywords ? videoKeywords.split(',').map(k => k.trim()) : [];
                const hashtags = keywordsArray.length > 0 ? 
                    keywordsArray.map(k => `#${k.replace(/\s+/g, '')}`).join(' ') : 
                    `#${videoTitle.replace(/\s+/g, '')}`;
                
                // Process links
                const linksArray = videoLinks ? videoLinks.split(',').map(l => l.trim()) : [];
                const formattedLinks = linksArray.map(link => {
                    if (!link.startsWith('http')) link = 'https://' + link;
                    return link;
                }).join('\n');
                
                // Process social handles
                const socialArray = socialHandles ? socialHandles.split(',').map(s => s.trim()) : [];
                const formattedSocial = socialArray.join('\n');
                
                // Generate description
                const template = descriptionTemplates[descriptionStyle];
                let description = template.join('');
                
                // Replace placeholders
                description = description
                    .replace(/{title}/g, videoTitle)
                    .replace(/{topic}/g, videoTopic)
                    .replace(/{channelName}/g, channelName)
                    .replace(/{keywords}/g, hashtags)
                    .replace(/{links}/g, formattedLinks)
                    .replace(/{socialHandles}/g, formattedSocial)
                    .replace(/{channelUrl}/g, "https://youtube.com/@YourChannel")
                    .replace(/{email}/g, "your-email@example.com");
                
                // Display description
                descriptionOutput.textContent = description;
            });
            
            // Copy description to clipboard
            copyBtn.addEventListener('click', function() {
                const description = descriptionOutput.textContent;
                
                if (description && !description.includes('Your generated description')) {
                    navigator.clipboard.writeText(description)
                        .then(() => {
                            const originalText = copyBtn.textContent;
                            copyBtn.textContent = 'Copied!';
                            setTimeout(() => {
                                copyBtn.textContent = originalText;
                            }, 2000);
                        })
                        .catch(err => {
                            alert('Failed to copy description. Please select and copy it manually.');
                            console.error('Failed to copy: ', err);
                        });
                }
            });
            
            // Reset form
            resetBtn.addEventListener('click', function() {
                document.getElementById('video-title').value = '';
                document.getElementById('channel-name').value = '';
                document.getElementById('video-topic').value = '';
                document.getElementById('video-keywords').value = '';
                document.getElementById('video-links').value = '';
                document.getElementById('social-handles').value = '';
                document.getElementById('description-style').value = 'professional';
                descriptionOutput.innerHTML = '<p>Your generated description will appear here after you click the Generate button.</p>';
            });
            
            // FAQ toggle functionality
            const faqQuestions = document.querySelectorAll('.faq-question');
            faqQuestions.forEach(question => {
                const answer = question.nextElementSibling;
                answer.style.display = 'none';
                
                question.addEventListener('click', () => {
                    if (answer.style.display === 'none') {
                        answer.style.display = 'block';
                    } else {
                        answer.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>
</html>
